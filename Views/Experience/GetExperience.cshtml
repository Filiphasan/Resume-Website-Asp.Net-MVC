@model MvcCvWebsite.Models.Entity.Experience
@{
    ViewBag.Title = "GetExperience";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
    <h2 class="text-center">Deneyim Güncelleme</h2>
    <form method="post" class="form-group-lg">

        @Html.HiddenFor(x => x.Id)
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })<br />

        <label>Başlık</label>
        @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })<br />

        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })<br />

        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Detail, new { @class = "form-control" })<br />

        <button class="btn btn-success">Bilgileri Güncelle</button>

    </form>

}


